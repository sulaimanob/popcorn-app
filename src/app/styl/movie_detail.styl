.movie-detail
    width 100%
    height 100%
    position fixed
    top 65px
    height calc( 100% - 65px )
    user-select none
    backface-visibility hidden
    //background-image url(https://zapp.trakt.us/images/fanart_movies/180757-940.jpg?1)
    display block
    background-repeat no-repeat
    background-size cover
    .backdrop-overlay
        width 100%
        height 100%
        position absolute
        opacity 0.6
        background-color #000
    .cover-image
        float left
        width auto
        position relative
        height 100%
        margin-right 2%
        border-radius 4px
        margin-left 5%
        //top 10%
        backface-visibility hidden
    .close
         top 15px
         right 15px
         position absolute
         float right
         width 20px
         height 20px
         background-image url('../images/icons/Close.png')
         background-size 20px
         cursor pointer
         opacity 0.7
         backface-visibility hidden
         transition all .5s
         &:hover
            opacity 1
            transition all .5s
    .container
        width 100%
        position relative
        height 80%
        border-radius 4px
        top 10%
        backface-visibility hidden
    .title
        color #fff
        position relative
        top -4px
        text-stroke 1px rgba(0, 0, 0, 0.1)
        font-size 38px
        font-family 'Open Sans Semibold'
        font-smoothing antialiased
    .meta-container
        top 5px
        height 20px
        position relative
        .item
            color #fff
            font-size 12px
            position relative
            font-family 'Open Sans Bold'
            text-stroke 1px rgba(0, 0, 0, 0.1)
            float left
            font-smoothing antialiased
        .dot
            margin 4px 15px 0px 15px
            position relative
            display inline-block
            width 4px
            float left
            height 4px
            border-radius 2px
            background-color #dbdbdd
        .star-container
            height 16px
            float left
            top: -3px
            position relative
            .rating-star
                z-index 2
                margin-right 3px
                position relative
                display inline-block
                width 11px
                height 11px
                background-image url("../images/icons/stars.png")
                background-repeat no-repeat
                backface-visibility hidden
                &.null
                    background-position 0px 0px
                &.half
                    background-position -11px 0px
                &.full
                    background-position -22px 0px
    .overview
        position relative
        float none
        color #fff
        top 20px
        width 95%
        font-family 'Open Sans Semibold'
        font-smoothing antialiased
        font-size 14px
        text-stroke 1px rgba(0, 0, 0, 0.1)
        backface-visibility hidden
    .health-icon
        position relative
        width 14px
        height 19px
        float right
        margin-right 5%
        background-image url("../images/icons/health.png")
        background-repeat no-repeat
        &.Bad
            background-position 0px 0px
        &.Medium
            background-position -14px 0px
        &.Good
            background-position -28px 0px
        &.Excellent
            background-position -42px 0px
    .bottom-container
        position absolute
        cursor pointer
        float left
        left 8%
        bottom 0
    .button
        position relative
        cursor pointer
        float left
        bottom 0
        height 35px
        margin-right 15px
        border-radius 3px
        background-clip padding-box
        background-color #1f375f
        padding 0 15px
        transition background-color 0.5s
        color #fff
        font-family 'Open Sans Semibold'
        font-smoothing antialiased
        text-align center
        font-size 12px
        line-height 34px
        &:hover
            background #225694
            text-decoration none
        &:active
            box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.6)
            background #2875e5
            border solid -2px #2468cc
    .favourites-toggle
        cursor pointer
        padding-left 24px
        bottom 5px
        height 18px
        position relative
        color #fff
        fadeicon(favourites, 0px, -38px, 18px)
        width 200px
        font-family 'Open Sans Semibold'
        font-smoothing antialiased
        font-size 14px
        line-height 17px
        
        &.selected
            fadeicon(favourites, -57px, 0px, 18px)
            width 200px


